<h1>Take a survey yayyy</h1>

<h2><%= @survey.title %></h2>
<h3><%= @survey.description %></h3>

<form action="/survey/confirm" method="post">
  <input type="hidden" value="<%= @survey.id %>" name="survey_id"/>
<% @survey.questions.each do |question| %>
  <p><%= question.text %></p>
  <% question.options.each do |option| %>
    <input type="radio" name="option[<%=question.id%>]" value="<%=option.id%>"><%= option.text %><br>
  <% end %>
<% end %>
<input type="submit" value="Complete Survey"/>
</form>





